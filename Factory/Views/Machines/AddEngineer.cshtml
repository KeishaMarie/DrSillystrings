@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h1>Add Engineer</h1>
<h3>Add an engineer that is licensed to repair this machine: @Html.DisplayFor(model => model.MachineName)</h3>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)

  @Html.Label("Choose Engineer")
  @Html.DropDownList("EngineerId")

  <input type="submit" value="Save" />
}


@{
  Layout = "_Layout";
}

@using Factory.Models
@model List<Factory.Models.Machine>

<h2>Machines Currently in Use</h2>

@if (@Model.Count == 0)
{
  <p>There are no Machines in working order right now.</p>
}

<ul>
  @foreach(Machine machine in Model)
  {
    <li>@Html.ActionLink($"{machine.MachineName}", "Details", new {id = machine.MachineId})</li>
  }
</ul>

<p>@Html.ActionLink("Add New Machine", "Create")</p>
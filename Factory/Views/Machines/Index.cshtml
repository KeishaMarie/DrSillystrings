@{
  Layout = "_Layout";
}

@using Factory.Models
@model List<Factory.Models.Machine>

<h1>Machines</h1>

@if (@Model.Count == 0)
{
  <h3>There are no machines in working order right now.</h3>
}

<ul>
  @foreach(Machine machine in Model)
  {
    <li>@Html.ActionLink($"{machine.MachineName}", "Details", new {id = machine.MachineId})</li>
  }
</ul>

<p>@Html.ActionLink("Add New Machine", "Create")</p>
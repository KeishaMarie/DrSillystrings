@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer;

<h1>Engineer Details</h1>
<hr />
<h3>@Html.DisplayNameFor(model => model.EngineerName):@Html.DisplayFor(model => model.EngineerName) </h3>

@if (@Model.JoinEntities.Count == 0)
{
  <p>This engineer is not licensed to repair any machines yet.</p>
}

<h3>This engineer may repair:</h3>

<ul>
  @foreach(var join in Model.JoinEntities)
  {
    <li>@join.Machine.MachineName</li>
    @using (Html.BeginForm("DeleteMachine", "Engineers"))
    {
      @Html.Hidden("joinId", @join.EngineerMachineId)
      <input type="submit" value="Delete"/>
    }
  }
  </ul>
  <p>@Html.ActionLink("Add a Machine", "AddMachine", new { id = Model.EngineerId })</p>
<hr />
<h4>@Html.ActionLink("Back to Engineer List", "Index")</h4>
<h4>@Html.ActionLink("Edit This Engineer", "Edit", new { id = Model.EngineerId })</h4>
<h4>@Html.ActionLink("Delete This Engineer", "Delete", new { id = Model.EngineerId })</h4>
